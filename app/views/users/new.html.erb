<div class="form-horizontal">
	<%= form_tag url_for(action: 'create'), method: "post" do %>
	
	<div class='row center-block col-'>
		<label class= 'col-sm-2  control-label'><%= label_tag 'Blase de rappeur :' %></label>
		<%= text_field_tag 'username', @new_user.username, placeholder: "Entrez votre nom d'utilisateur", class: 'form-control col-sm-9' %>
	</div>
	<div class='row center-block'>
		<label class= 'col-sm-2 control-label'><%= label_tag 'Email :' %></label>
		<%= email_field_tag 'email', @new_user.email, placeholder:"Entrez votre email", class: 'form-control col-sm-9'%>
	</div>
	<div class='row center-block'>
		<span class= 'col-sm-2 control-label'><%= label_tag 'Raconte-nous ta life :' %></span>
		<%= text_area_tag 'bio', @new_user.bio, placeholder: 'Ma life en quelques lignes', class: 'form-control col-sm-9' %>
	</div>
	<br />
	<div class='form-group center-block'>
	<%= submit_tag "Créer mon compte", class: 'col-sm-offset-2 btn btn-info btn-lg btn-submit' %>
	</div>

	<% end %>

</div>

